@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h1>Add a new tag</h1>
<hr/>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
