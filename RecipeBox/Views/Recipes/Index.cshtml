@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@using System.Security.Claims
@model IEnumerable<RecipeBox.Models.Recipe>

<h1>@User.Identity.Name's Recipes</h1>
<hr/>
@if(Model.Any())
{
  <ul>
  @foreach(Recipe recipe in Model)
  {
    <li><p>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId})</p></li>
  }
  </ul>
}
else
{
  <p>No recipes have been added yet!</p>
}
<br>
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new recipe", "Create")</p>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>